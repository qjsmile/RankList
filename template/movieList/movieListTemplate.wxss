/* template/movieList/movieListTemplate.wxss */

.movieList {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.movie-line {
  height: 2rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color:#e1e1e1; 
}

.movie {
  display: flex;
}

.movie-image {
  width: 200rpx;
  height: 280rpx
}

.movie-image-pic {
  width: 200rpx;
  height: 280rpx;
  box-shadow: 10rpx 10rpx 30rpx rgba(0, 0, 0, .2)
}

.movie-image-rank {
  width: 30rpx;
  height: 40rpx;
  margin-top: -295rpx;
}

.movie-image-rank-text {
  font-size: 35rpx;
  background-color:rgba(0, 0, 0, .6);
  color: #FFF;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.movie-info {
  display: flex;
  flex-direction: column;
  max-width: 350rpx;
  margin-left: 40rpx;
}

.movie-info-title {
  font-size: 40rpx;
  color: rgb(0, 0, 0);
  font-weight: bold;
  margin-bottom: 15rpx;
}

.movie-common-text {
  font-size: 30rpx;
  padding: 2rpx 0rpx;
  margin-bottom: 5rpx;
  color: #666;
  display: inline-block;
}

.itemName {
  font-size: 30rpx;
  color: #444;
  font-weight: bold;
}

.ad {
  margin-bottom: 0.5rem;
}